<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Forum</display-name>
  <filter>
    <filter-name>replyFilter</filter-name>
    <filter-class>fr.acceis.forum.servlet.ReplyFilter</filter-class>
  </filter>
  <servlet>
    <servlet-name>accueil</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.AccueilServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>inscription</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.Inscription</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.Login</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>thread</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.Thread</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>reply</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.Reply</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>topic</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.NewTopic</servlet-class>
  </servlet>
  <filter-mapping>
    <filter-name>replyFilter</filter-name>
    <servlet-name>reply</servlet-name>
    <servlet-name>topic</servlet-name>
  </filter-mapping>  
  <servlet-mapping>
    <servlet-name>accueil</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>inscription</servlet-name>
    <url-pattern>/inscription</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>thread</servlet-name>
    <url-pattern>/thread</url-pattern>
  </servlet-mapping>  
  <servlet-mapping>
    <servlet-name>reply</servlet-name>
    <url-pattern>/reply</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>topic</servlet-name>
    <url-pattern>/topic</url-pattern>
  </servlet-mapping>
</web-app>